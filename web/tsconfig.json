{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "__sapper__/*",
        "public/*"
    ],
    "compilerOptions": {
        "sourceMap": true,
        "baseUrl": "src",
        "paths": {
            "@layouts/*": [
                "layouts/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@stores/*": [
                "stores/*"
            ],
            "@models/*": [
                "models/*"
            ]
        }
    }
}